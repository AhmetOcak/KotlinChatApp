<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/white_100</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="CustomEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/white_100</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/white_100</item>
        <item name="colorControlActivated">@color/white_100</item>
        <item name="colorControlHighlight">@color/white_100</item>
    </style>
</resources>